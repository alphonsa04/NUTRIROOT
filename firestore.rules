rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Helper function to check if user is admin
    function isAdmin() {
      return isAuthenticated() && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Users collection - users can read/write their own data, admins can read all
    match /users/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow write: if isOwner(userId) || isAdmin();
      allow delete: if isAdmin();
    }
    
    // Soil data collection - users can only access their own soil readings, admins can read all
    match /soilData/{userId}/{document=**} {
      allow read: if isOwner(userId) || isAdmin();
      allow write: if isOwner(userId) || isAdmin();
      allow delete: if isAdmin();
    }
    
    // Alternative soil data structure (if using subcollections)
    match /users/{userId}/soilReadings/{readingId} {
      allow read: if isOwner(userId) || isAdmin();
      allow write: if isOwner(userId) || isAdmin();
      allow delete: if isAdmin();
    }
    
    // Crop knowledge base - public read access, admins can write
    match /crops/{cropId} {
      allow read: if true;
      allow write, delete: if isAdmin();
    }
    
    // Fertilizer recommendations - users can only access their own, admins can read all
    match /recommendations/{userId}/{document=**} {
      allow read: if isOwner(userId) || isAdmin();
      allow write: if isOwner(userId) || isAdmin();
      allow delete: if isAdmin();
    }
    
    // Alerts - users can only access their own alerts, admins can read all
    match /alerts/{userId}/{document=**} {
      allow read: if isOwner(userId) || isAdmin();
      allow write: if isOwner(userId) || isAdmin();
      allow delete: if isAdmin();
    }
    
    // History/logs - users can only access their own history, admins can read all
    match /history/{userId}/{document=**} {
      allow read: if isOwner(userId) || isAdmin();
      allow write: if isOwner(userId) || isAdmin();
      allow delete: if isAdmin();
    }
    
    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
